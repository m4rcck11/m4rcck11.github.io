  document.addEventListener('DOMContentLoaded', () => {
    // Sistema de animação sensível ao scroll
    const observerOptions = {
      root: null,
      rootMargin: '0px',
      threshold: 0.3
    };
    
    // Função para animação de digitação
    function typeWriter(element, text, speed = 100, isHTML = false) {
      return new Promise((resolve) => {
        element.innerHTML = '';
        let i = 0;
        
        if (isHTML) {
          // Para HTML, vamos digitar letra por letra mas manter as tags
          const tempDiv = document.createElement('div');
          tempDiv.innerHTML = text;
          const plainText = tempDiv.textContent || tempDiv.innerText || '';
          
          const timer = setInterval(() => {
                         if (i < plainText.length) {
               const currentText = plainText.substring(0, i + 1);
               if (currentText.includes('MARKDEV')) {
                 const beforeMarkdev = currentText.substring(0, currentText.indexOf('MARKDEV'));
                 const markdevPart = currentText.substring(currentText.indexOf('MARKDEV'));
                 element.innerHTML = beforeMarkdev + '<span style="background: linear-gradient(to right, #f3f4f6, #9ca3af); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">' + markdevPart + '</span>';
               } else {
                 element.textContent = currentText;
               }
               i++;
             } else {
              element.innerHTML = text;
              clearInterval(timer);
              resolve();
            }
          }, speed);
        } else {
          const timer = setInterval(() => {
            if (i < text.length) {
              element.innerHTML += text.charAt(i);
              i++;
            } else {
              clearInterval(timer);
              resolve();
            }
          }, speed);
        }
      });
    }
    
    // Função para iniciar animação de digitação do terminal
    async function startTerminalAnimation() {
      const titleElement = document.getElementById('typing-title');
      const subtitleElement = document.getElementById('typing-subtitle');
      const cursor = document.getElementById('terminal-cursor');
      
      if (titleElement && subtitleElement && cursor) {
                 const titleText = 'About <span style="background: linear-gradient(to right, #f3f4f6, #9ca3af); -webkit-background-clip: text; -webkit-text-fill-color: transparent; background-clip: text;">MARKDEV</span>';
         const subtitleText = 'Technology with a <strong style="color: #e5e7eb;">Human Touch</strong>';
        
        // Aguardar um pouco antes de começar
        await new Promise(resolve => setTimeout(resolve, 800));
        
        // Digitar o título
        await typeWriter(titleElement, titleText, 80, true);
        
        // Aguardar um pouco antes do subtítulo
        await new Promise(resolve => setTimeout(resolve, 300));
        
        // Digitar o subtítulo
        await typeWriter(subtitleElement, subtitleText, 60, true);
        
        // Esconder o cursor após terminar
        setTimeout(() => {
          cursor.style.display = 'none';
        }, 1000);
      }
    }
    
    const scrollObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          // Animar elementos dentro da seção
          const animateElements = entry.target.querySelectorAll('[data-scroll-animate]');
          animateElements.forEach((element, index) => {
            setTimeout(() => {
              element.classList.add('animate-in');
              
              // Se for a seção sobre, iniciar animação de digitação
              if (entry.target.id === 'about-markdev' && index === 0) {
                setTimeout(() => {
                  startTerminalAnimation();
                }, 500);
              }
            }, index * 200);
          });
        }
      });
    }, observerOptions);
    
    // Observar todas as seções
    const sections = document.querySelectorAll('.scroll-section');
    sections.forEach((section) => {
      scrollObserver.observe(section);
    });
    
        // Efeito de scramble no botão hacker
    const hackerButton = document.getElementById('hacker-button');
    const buttonText = document.getElementById('button-text');
    const terminalCursor = document.getElementById('terminal-cursor-btn');
    
    if (hackerButton && buttonText && terminalCursor) {
      const originalText = '>>> MEET MARCELO';
      const hackerText = '>>> MEET MARKDEV';
      const characters = '!@#$%^&*()_+-=[]{}|;:,.<>?~`0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz';
      let isAnimating = false;
      
      // Função para posicionar o cursor após o texto
      const updateCursorPosition = () => {
        const textWidth = buttonText.scrollWidth;
        terminalCursor.style.left = `${textWidth + 8}px`;
      };
      
      // Posicionar cursor inicialmente
      updateCursorPosition();
      
      const scrambleText = (finalText, callback) => {
        const maxLength = Math.max(originalText.length, finalText.length);
        let frame = 0;
        const maxFrames = 15;
        
        const animate = () => {
          let scrambled = '';
          
          for (let i = 0; i < maxLength; i++) {
            if (frame > i) {
              // Revelar o caractere final
              scrambled += finalText[i] || '';
            } else {
              // Scramble character
              scrambled += characters[Math.floor(Math.random() * characters.length)];
            }
          }
          
          buttonText.textContent = scrambled;
          updateCursorPosition();
          
          if (frame < maxFrames) {
            frame++;
            setTimeout(animate, 50);
          } else {
            buttonText.textContent = finalText;
            updateCursorPosition();
            if (callback) callback();
          }
        };
        
        animate();
      };
      
      hackerButton.addEventListener('mouseenter', () => {
        if (!isAnimating) {
          isAnimating = true;
          // Primeiro scramble para MARKDEV
          scrambleText(hackerText, () => {
            // Aguardar 500ms (meio segundo) e então scramble de volta para MARCELO
            setTimeout(() => {
              scrambleText(originalText, () => {
                isAnimating = false;
              });
            }, 500);
          });
        }
      });
      
      // Atualizar posição do cursor quando a janela redimensiona
      window.addEventListener('resize', updateCursorPosition);
    }
    
    // Controle do avatar com delay
    const avatarNotification = document.getElementById('avatar-notification');
    let avatarTimer = null;
    let hasShownAvatar = false;
    
    if (avatarNotification) {
      const avatarObserver = new IntersectionObserver((entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting && !hasShownAvatar) {
            // Pessoa entrou na seção About Me, iniciar timer de 3 segundos
            avatarTimer = setTimeout(() => {
              avatarNotification.classList.add('show');
              hasShownAvatar = true;
            }, 3000);
          } else if (!entry.isIntersecting && avatarTimer) {
            // Pessoa saiu da seção antes dos 3 segundos, cancelar timer
            clearTimeout(avatarTimer);
            avatarTimer = null;
          }
        });
      }, {
        root: null,
        rootMargin: '0px',
        threshold: 0.5 // 50% da seção deve estar visível
      });
      
      // Observar a seção About Me (section-3)
      const aboutMeSection = document.getElementById('about-me');
      if (aboutMeSection) {
        avatarObserver.observe(aboutMeSection);
      }
    }
    
    // Partners Popup Functionality
    const partnersBtn = document.getElementById('partners-btn');
    const partnersBtnMobile = document.getElementById('partners-btn-mobile');
    const partnersPopup = document.getElementById('partners-popup');
    const closePartnersPopup = document.getElementById('close-partners-popup');
    
    function openPartnersPopup() {
      if (partnersPopup) {
        partnersPopup.classList.remove('hidden');
        partnersPopup.classList.add('flex');
        document.body.style.overflow = 'hidden';
        
        // Animar entrada
        setTimeout(() => {
          partnersPopup.classList.remove('opacity-0', 'scale-95');
          partnersPopup.classList.add('opacity-100', 'scale-100');
        }, 10);
      }
    }
    
    function closePartnersPopupFunc() {
      if (partnersPopup) {
        // Animar saída
        partnersPopup.classList.remove('opacity-100', 'scale-100');
        partnersPopup.classList.add('opacity-0', 'scale-95');
        
        setTimeout(() => {
          partnersPopup.classList.add('hidden');
          partnersPopup.classList.remove('flex');
          document.body.style.overflow = '';
        }, 700);
      }
    }
    
    if (partnersBtn) {
      partnersBtn.addEventListener('click', openPartnersPopup);
    }
    
    if (partnersBtnMobile) {
      partnersBtnMobile.addEventListener('click', openPartnersPopup);
    }
    
    if (closePartnersPopup) {
      closePartnersPopup.addEventListener('click', closePartnersPopupFunc);
    }
    
    // Fechar popup ao clicar fora dele
    if (partnersPopup) {
      partnersPopup.addEventListener('click', (e) => {
        if (e.target === partnersPopup) {
          closePartnersPopupFunc();
        }
      });
    }
    
    // Fechar popup com ESC
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && partnersPopup && !partnersPopup.classList.contains('hidden')) {
        closePartnersPopupFunc();
      }
    });
  });
