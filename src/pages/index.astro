<style>
  /* Animações customizadas para o scroll */
  .scroll-section {
    transition: all 0.6s ease;
  }
  
  .animate-spin-slow {
    animation: spin 8s linear infinite;
  }
  
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  /* Animação do cursor terminal */
  .cursor-blink {
    animation: blink 1s infinite;
  }
  
  @keyframes blink {
    0%, 50% { opacity: 1; }
    51%, 100% { opacity: 0; }
  }
  
  /* Estados de animação */
  [data-scroll-animate].animate-in {
    opacity: 1 !important;
    transform: translateY(0) !important;
  }
  
  /* System Grid Background */
  .system-background {
    position: relative;
  }
  
  .system-grid {
    background-image: 
      linear-gradient(rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.02) 1px, transparent 1px),
      linear-gradient(rgba(255, 255, 255, 0.005) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.005) 1px, transparent 1px);
    background-size: 
      80px 80px,
      80px 80px,
      20px 20px,
      20px 20px;
    background-position: 
      0 0,
      0 0,
      0 0,
      0 0;
    animation: systemPulse 10s ease-in-out infinite;
  }
  
  .system-grid::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: 
      radial-gradient(circle at 50% 50%, rgba(255, 255, 255, 0.01) 2px, transparent 2px);
    background-size: 160px 160px;
    background-position: 0 0;
    animation: systemRotate 20s linear infinite;
  }
  
  .system-grid::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(ellipse at center, transparent 40%, rgba(0, 0, 0, 0.3) 100%);
    pointer-events: none;
  }
  
  @keyframes systemPulse {
    0%, 100% { 
      opacity: 0.15;
      transform: scale(1);
    }
    50% { 
      opacity: 0.25;
