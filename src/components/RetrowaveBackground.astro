---
// Component that uses a separate JavaScript script
---

<div id="retrowave-background" class="absolute inset-0 z-0"></div>

<script>
  import { initRetrowaveBackground } from '../scripts/retrowave-background.js';
  
  // Wait for the DOM to load
  document.addEventListener('DOMContentLoaded', () => {
    setTimeout(() => {
      initRetrowaveBackground();
    }, 100);
  });
</script>

<style>
  #retrowave-background {
    pointer-events: none;
  }
</style> 