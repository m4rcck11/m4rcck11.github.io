---

<section id="projects" class="section-padding" style="background-color: #242323;">
  <div class="container-custom">
    <div class="text-center mb-16 animate-on-scroll">
      <h2 class="text-4xl font-bold font-tech mb-4 text-gray-900 dark:text-white">
        My <span class="text-gradient">Projects</span>
      </h2>
      <p class="text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
        Some of the projects I have developed, demonstrating my technical and creative skills
      </p>
    </div>
    
    <!-- Filter Buttons -->
    <div class="flex flex-wrap justify-center gap-4 mb-12 animate-on-scroll">
      <button class="filter-btn active" data-filter="all">All</button>
      <button class="filter-btn" data-filter="fullstack">Full Stack</button>
      <button class="filter-btn" data-filter="frontend">Frontend</button>
      <button class="filter-btn" data-filter="backend">Backend</button>
      <button class="filter-btn" data-filter="mobile">Mobile</button>
    </div>
    
    <!-- Projects Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="projects-grid">
      {projects.map((project, index) => (
        <div 
          class={`project-card animate-on-scroll ${project.featured ? 'featured' : ''}`}
          data-category={project.category}
          style={`animation-delay: ${index * 100}ms`}
        >
          <div class="project-image">
            <img 
              src={project.image} 
              alt={project.title}
              class="w-full h-48 object-cover"
              loading="lazy"
            />
            <div class="project-overlay">
              <div class="project-actions">
                <a 
                  href={project.demo} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="action-btn"
                  title="View Demo"
                >
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                  </svg>
                </a>
                <a 
                  href={project.github} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="action-btn"
                  title="View Code"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                  </svg>
                </a>
              </div>
            </div>
            {project.featured && (
              <div class="featured-badge">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                Featured
              </div>
            )}
          </div>
          
          <div class="project-content">
            <h3 class="project-title">{project.title}</h3>
            <p class="project-description">{project.description}</p>
            
            <div class="project-technologies">
              {project.technologies.map((tech) => (
                <span class="tech-tag">{tech}</span>
              ))}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Load More Button -->
    <div class="text-center mt-12 animate-on-scroll">
      <button class="btn-secondary" id="load-more-btn">
        View More Projects
      </button>
    </div>
  </div>
</section>

<style>
  .filter-btn {
    @apply px-6 py-2 rounded-full border-2 border-gray-300 dark:border-gray-600 text-gray-600 dark:text-gray-400 font-medium font-tech transition-all duration-300 hover:border-gray-700 hover:text-gray-900 dark:hover:text-gray-100;
  }
  
  .filter-btn.active {
    @apply border-gray-900 bg-gray-900 text-white dark:border-gray-100 dark:bg-gray-100 dark:text-gray-900;
  }
  
  .project-card {
    @apply rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:scale-105 border border-gray-600 overflow-hidden;
    background-color: #2d2c2c;
  }
  
  .project-card.featured {
    @apply ring-2 ring-gray-700 dark:ring-gray-300 ring-opacity-50;
  }
  
  .project-image {
    @apply relative overflow-hidden;
  }
  
  .project-overlay {
    @apply absolute inset-0 bg-black bg-opacity-50 opacity-0 hover:opacity-100 transition-opacity duration-300 flex items-center justify-center;
  }
  
  .project-actions {
    @apply flex space-x-4;
  }
  
  .action-btn {
    @apply bg-white text-gray-900 p-3 rounded-full hover:bg-gray-100 hover:text-gray-700 transition-all duration-300 transform hover:scale-110;
  }
  
  .featured-badge {
    @apply absolute top-4 right-4 bg-gray-900 dark:bg-gray-100 text-white dark:text-gray-900 px-3 py-1 rounded-full text-xs font-medium flex items-center space-x-1;
  }
  
  .project-content {
    @apply p-6;
  }
  
  .project-title {
    @apply text-xl font-bold font-display text-gray-900 dark:text-white mb-3;
  }
  
  .project-description {
    @apply text-gray-600 dark:text-gray-400 mb-4 line-clamp-3;
  }
  
  .project-technologies {
    @apply flex flex-wrap gap-2;
  }
  
  .tech-tag {
    @apply px-2 py-1 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded text-xs font-medium;
  }
  
  .project-card.hidden {
    @apply opacity-0 pointer-events-none transform scale-95;
  }
  
  .project-card.visible {
    @apply opacity-100 pointer-events-auto transform scale-100;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const filterButtons = document.querySelectorAll('.filter-btn');
    const projectCards = document.querySelectorAll('.project-card');
    const loadMoreBtn = document.getElementById('load-more-btn');
    
    // Filter functionality
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const filter = button.getAttribute('data-filter');
        
        // Update active button
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');
        
        // Filter projects
        projectCards.forEach(card => {
          const category = card.getAttribute('data-category');
          
          if (filter === 'all' || category === filter) {
            card.classList.remove('hidden');
            card.classList.add('visible');
          } else {
            card.classList.add('hidden');
            card.classList.remove('visible');
          }
        });
      });
    });
    
    // Load more functionality (placeholder)
    if (loadMoreBtn) {
      loadMoreBtn.addEventListener('click', () => {
        // Simulate loading more projects
        loadMoreBtn.textContent = 'Carregando...';
        
        setTimeout(() => {
          loadMoreBtn.textContent = 'View More Projects';
          // Here you would load more projects
        }, 1000);
      });
    }
    
    // Initialize with all projects visible
    projectCards.forEach(card => {
      card.classList.add('visible');
    });
  });
</script> 